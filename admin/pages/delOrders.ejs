<!--Title-->
<div class="container pb-5" style="text-align: center;"><h3 style="all: unset; font-size: 3rem; font-weight: bolder;">Remove an Order</h3></div>
<form method="post" action="/orders/delOrders/del-data">
	<div class="row justify-content-center">
		<div class="col- py-2">
			<label for="foodID" style="font-weight: bolder; font-size: 1.3rem;">Food Item:</label>
			<input type="number" id="foodID" style="width: 5rem; font-weight: bolder; font-size: 1.3rem;" name="foodID">
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col- py-2">
			<label for="oID" style="font-weight: bolder; font-size: 1.3rem;">Order ID:</label>
			<input type="number" id="oID" style="width: 10rem; font-weight: bolder; font-size: 1.3rem;" name="oID">
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col- py-2">
			<label for="fName" style="font-weight: bolder; font-size: 1.3rem;">First Name:</label>
			<input type="text" id="fName" style=" font-weight: bolder; font-size: 1.3rem;" name="fName">
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col- py-2">
			<label for="lName" style="font-weight: bolder; font-size: 1.3rem;">Last Name:</label>
			<input type="text" id="lName" style=" font-weight: bolder; font-size: 1.3rem;" name="lName">
		</div>
	</div>
	<div class="row justify-content-center">
		<div class="col- py-2">
			<label for="date" style="font-weight: bolder; font-size: 1.3rem;">Date:</label>
			<input type="date" id="date" style="width: 13rem; font-weight: bolder; font-size: 1.3rem;" name="date">
		</div>
	</div>
	<div class="row justify-content-center pt-3 pb-5">
		<div class="col-">
			<button type="submit" class="btn btn-danger">
				&ensp;&ensp;&ensp;DELETE&ensp;&ensp;&ensp;
			</button>
		</div>
	</div>
</form>

<div class="table-responsive px-5">
<table class="table table-bordered table-hover table-striped">
	<thead class="thead-color">
	  <tr>
		<th scope="col">Order ID</th>
		<th scope="col">Food Item</th>
		<th scope="col">Quantity</th>
		<th scope="col">First Name</th>
		<th scope="col">Last Name</th>
        <th scope="col">Address</th>
		<th scope="col">Contact No.</th>
		<th scope="col">Email</th>
		<th scope="col">Facebook</th>
		<th scope="col">Delivery/ Pick Up date</th>
		<th scope="col">Delivery option</th>
		<th scope="col">MOP</th>
		<th scope="col">Delivery time</th>
	  </tr>
	</thead>
	<tbody>
		<% data.forEach(items =>{ %>
			<tr>
				<th scope="row"><%= items.order_id %></th>
				<td><%= items.food_id %></td>
				<td><%= items.qty %></td>
				<td><%= items.customer_FName %></td>
				<td><%= items.customer_LName %></td>
                <td><%= items.customer_address %></td>
				<td><%= items.customer_number %></td>
				<td><%= items.customer_email %></td>
				<td><%= items.customer_facebook %></td>
				<td><%= items.order_date %></td>
				<td><%= items.delivery_option %></td>
				<td><%= items.mode_of_payment %></td>
				<td><%= items.delivery_time %></td>
			  </tr>
		<% }) %>
	</tbody>
  </table>
</div>


